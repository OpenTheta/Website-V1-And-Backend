contract BurnBounty {
    address burnAddress = address(1);

    struct NFTBurner {
        uint256 toBurn;
        uint256 TFuelReward;
        address creator;
    }

    //    mapping NFT address to NFTBurner
    mapping(address => NFTBurner) private AddressToBurner;

    function BurnNFT(address nftContract, uint256 tokenId) public {
        require(AddressToBurner[nftContract].toBurn > 0, "No more to burn left");
        IERC721(nftContract).transferFrom(msg.sender, burnAddress, tokenId);
        (bool success,) = payable(msg.sender).call{value : AddressToBurner[nftContract].TFuelReward}("");
        require(success, "Transfer failed.");
    }

    function getBounty(address nftContract) public view returns (uint256) {
        return AddressToBurner[nftContract].TFuelReward;
    }

    function getAmountLeft(address nftContract) public view returns (uint256) {
        return AddressToBurner[nftContract].toBurn;
    }

    function setBounty(address nftContract, uint256 toBurn_, uint256 reward) public payable {
        uint256 amount = toBurn_ * reward;
        require(msg.value == amount, "amount not equal total bounty");
        uint256 previousAmount = AddressToBurner[nftContract].toBurn * AddressToBurner[nftContract].TFuelReward;
        if(previousAmount > 0) {
            (bool success,) = payable(AddressToBurner[nftContract].creator).call{value : previousAmount}("");
            require(success, "Transfer failed.");
        }
        AddressToBurner[nftContract].creator = msg.sender;
        AddressToBurner[nftContract].toBurn = toBurn_;
        AddressToBurner[nftContract].TFuelReward = reward;
    }
}
